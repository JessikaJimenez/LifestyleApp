<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFrag">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.lifestyleapp.ProfileFragment"
        android:label="Profile Page"
        tools:layout="@layout/fragment_profile_page">

        <action
            android:id="@+id/action_profile_to_home"
            app:destination="@id/HomeFrag" />
        <action
            android:id="@+id/action_FirstFragment_to_FitnessReg"
            app:destination="@id/FitnessReg"
            app:enterAnim="@anim/fragment_fade_enter" />
    </fragment>

    <fragment
        android:id="@+id/HomeFrag"
        android:name="com.example.lifestyleapp.HomeFrag"
        android:label="ProfileFrag"
        tools:layout="@layout/fragment_home_page">

        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_home_to_weather"
            app:destination="@id/weatherFrag"
            />
        <action
            android:id="@+id/action_HomeFrag_to_FitnessReg"
            app:destination="@id/FitnessReg"
            app:enterAnim="@anim/fragment_fade_enter" />
    </fragment>

    <fragment
        android:id="@+id/FitnessReg"
        android:name="com.example.lifestyleapp.SecondFragment"
        android:label="FitnessReg"
        tools:layout="@layout/fragment_fitness_page">

        <action
            android:id="@+id/action_fitness_to_home"
            app:destination="@id/HomeFrag" />
        <action
            android:id="@+id/action_FitnessReg_to_Profile"
            app:destination="@id/FirstFragment" />
    </fragment>

    <fragment
        android:id="@+id/weatherFrag"
        android:name="com.example.lifestyleapp.WeatherDisplay"
        android:label="WeatherDisplay"
        tools:layout="@layout/fragment_weather_display">

        <action
            android:id="@+id/action_weather_to_home"
            app:destination="@id/HomeFrag" />
    </fragment>
</navigation>